{
	"compilerOptions": {
		"declaration": true,
		"emitDeclarationOnly": true,
		"outDir": "dist/types",

		"allowJs": true,
		"checkJs": true,

		"moduleResolution": "node",
		"module": "ESNext",
		"target": "ESNext",

		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noImplicitAny": true,
		"skipLibCheck": true,
		"strictNullChecks": true
	},
	"include": ["eslint", "prettier", "stylelint", "**/*.d.ts"]
}
