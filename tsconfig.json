{
	"compilerOptions": {
		"allowJs": true,
		"moduleResolution": "node",
		"module": "ESNext",
		"noEmit": true,
		"target": "ESNext",
		"checkJs": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noImplicitAny": true,
		"skipLibCheck": true,
		"strictNullChecks": true
	},
	"include": ["eslint", "prettier", "stylelint", "**/*.d.ts"]
}
